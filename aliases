# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$VISUAL"
alias v="$EDITOR"
alias vim="nvim"

# Bundler
alias b="bundle"
alias be="bundle exec"

for alias in ~/.zsh/aliases/*; do
  source $alias
done
